<div class="row content">
  <div style="width: 15%">
    <div class="img-with-text">
      <%= link_to image_tag(post.user.profile_pic, border: 0, size: "50x50"), user_path(post.user) %>
    </div>
    <div>
      <p>
        <%= link_to post.user.nickname, user_path(post.user) %>
      </p>
    </div>
  </div>
  <div>
    <h3>
      <%= link_to post.title , post_path(post) %>
    </h3>
    <p>
      <%= post.description %>
    </p>
  </div>
</div>