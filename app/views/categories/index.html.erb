<% provide(:title, "Categories") %>
<% if user_signed_in?  %>
  <% if current_user.role=="admin"%>
    <h1>Categories</h1>
    <% categorie=@category %>
    <%= form_with(model: categorie, local: true) do |form| %>
      <div class="row">
        <div style="width: 50%">
          <%= form.text_field :name %>
        </div>
        <div>
          <%= form.submit 'Create Category' %>
        </div>
      </div>
    <% end %>
    <hr>
    <div>
      <% @categories.each do |category| %>
        <div class="row">
          <div style="width: 50%">
            <p><%= category.name %></p>
          </div>
          <div>
            <%= link_to 'Edit', categories_update_path%>
          </div>
          <div>
            <%= link_to 'Delete',  { action: :destroy, id: category.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You don't have access to this page.</p>
  <% end %>
<% else %>
  <p>You don't have access to this page.</p>
<% end %>